<Defs>

	<!--===== Strun =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Strun</defName>
    <label>strun</label>
    <description>The Strun is a standard shotgun. Reliable, versatile and deadly.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Strun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_TennoWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>20000</WorkToMake>
      <Mass>5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.3</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>1.40</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>60</Plasteel>
	  <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Milkwater_Bullet_Strun</defaultProjectile>
        <warmupTime>0.7</warmupTime>
        <range>15</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>Milkwater_Shot_Strun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
    </tools>
    <weaponClasses>
      <li>ShortShots</li>
    </weaponClasses>
    <weaponTags>
      <li>ShortShots</li>
	  <li>SpacerGun</li>
    </weaponTags>
  </ThingDef>
  
