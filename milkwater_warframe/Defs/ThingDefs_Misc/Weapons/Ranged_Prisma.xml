<?xml version="1.0" encoding="utf-8"?>

<Defs>

<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Gorgon_Prisma</defName>
    <label>prisma gorgon</label>
    <description>Adorned with void hardened prisma crystal, this Gorgon variant is prized for its beauty and enhanced mechanics.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Gorgon_Prisma</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_PrismaWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <Mass>5</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>2.40</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Milkwater_Gorgon>1</Milkwater_Gorgon>
	  <PrismaCrystal>3</PrismaCrystal>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Milkwater_Bullet_Gorgon</defaultProjectile>
        <warmupTime>1.2</warmupTime>
        <range>45</range>
        <burstShotCount>14</burstShotCount>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <soundCast>Milkwater_Shot_Gorgon</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
    </tools>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <weaponTags>
      <li>LongShots</li>
	  <li>SpacerGun</li>
    </weaponTags>
  </ThingDef>
  
