<?xml version="1.0" encoding="utf-8"?>

<Defs>

<!--===== Dera =====-->
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Dera</defName>
    <label>dera</label>
    <description>The Dera is a repeater that fires super-heated plasma.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Dera</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_CorpusWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <Mass>5</Mass>
      <AccuracyTouch>0.7</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.45</AccuracyLong>
      <RangedWeapon_Cooldown>1.60</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>70</Plasteel>
	  <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Milkwater_Bullet_Dera</defaultProjectile>
        <warmupTime>1.7</warmupTime>
		<burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <range>35</range>
        <soundCast>Milkwater_Shot_Dera</soundCast>
        <muzzleFlashScale>0</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
	  <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
    </tools>
    <weaponClasses>
      <li>Ranged</li>
      <li>RangedLight</li>
	  <li>LongShots</li>
    </weaponClasses>
    <weaponTags>
		<li>CorpusLight</li>
      <li>LongShots</li>
	  <li>SpacerGun</li>
    </weaponTags>
  </ThingDef>
  
