<?xml version="1.0" encoding="utf-8"?>

<Defs>

<!--===== Strun Wraith =====-->
<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Strun_Wraith</defName>
    <label>strun wraith</label>
    <description>A different take on a familiar shotgun, the Strun Wraith features unique styling.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Strun_Wraith</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <soundInteract>Interact_Shotgun</soundInteract>
    <recipeMaker>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
      <researchPrerequisite>WF_WraithWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <Mass>5</Mass>
      <AccuracyTouch>0.7</AccuracyTouch>
      <AccuracyShort>0.65</AccuracyShort>
      <AccuracyMedium>0.3</AccuracyMedium>
      <AccuracyLong>0.25</AccuracyLong>
      <RangedWeapon_Cooldown>1.40</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Plasteel>60</Plasteel>
	  <ComponentWraith>4</ComponentWraith>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Milkwater_Bullet_Strun</defaultProjectile>
        <warmupTime>0.7</warmupTime>
        <range>17</range>
        <burstShotCount>2</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>Milkwater_Shot_Strun</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.7</cooldownTime>
      </li>
    </tools>
    <weaponClasses>
      <li>ShortShots</li>
    </weaponClasses>
    <weaponTags>
      <li>ShortShots</li>
	  <li>SpacerGun</li>
    </weaponTags>
  </ThingDef>
  
