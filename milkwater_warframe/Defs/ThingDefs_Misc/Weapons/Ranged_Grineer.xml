<Defs>

<!--===== Nukor =====-->
<ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Milkwater_Nukor</defName>
    <label>nukor</label>
    <description>Creates and focuses a high-frequency field of microwaves, literally cooking the target from within.</description>
    <graphicData>
      <texPath>Things/Weapons/Milkwater_Nukor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
	<equippedAngleOffset>0</equippedAngleOffset>
    <soundInteract>Interact_Autopistol</soundInteract>
    <recipeMaker>
      <recipeUsers Inherit="False">
        <li>TableOrokin</li>
      </recipeUsers>
      <researchPrerequisite>WF_GrineerWeaponry</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <Mass>2</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.50</AccuracyShort>
      <AccuracyMedium>0.45</AccuracyMedium>
      <AccuracyLong>0.40</AccuracyLong>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>40</Steel>
	  <ComponentIndustrial>3</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_ShootBeam</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>1.0</warmupTime>
        <range>15</range>
        <beamFullWidthRange>3</beamFullWidthRange>
        <burstShotCount>6</burstShotCount>
        <showBurstShotStats>false</showBurstShotStats>
        <beamWidth>3</beamWidth>
        <ticksBetweenBurstShots>22</ticksBetweenBurstShots>
        <beamDamageDef>Beam</beamDamageDef>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <soundCastBeam>Milkwater_Shot_Nukor</soundCastBeam>
        <beamGroundFleckDef>Fleck_BeamBurn</beamGroundFleckDef>
        <beamFleckChancePerTick>0.32</beamFleckChancePerTick>
        <beamMaxDeviation>1.2</beamMaxDeviation>
        <beamCurvature>0.3</beamCurvature>
        <beamMoteDef>Mote_GraserBeamBase</beamMoteDef>
        <beamEndEffecterDef>GraserBeam_End</beamEndEffecterDef>
        <beamChanceToStartFire>0.85</beamChanceToStartFire>
        <beamChanceToAttachFire>0.85</beamChanceToAttachFire>
        <beamFireSizeRange>0.55~0.85</beamFireSizeRange>
        <beamLineFleckDef>Fleck_BeamSpark</beamLineFleckDef>
        <beamStartOffset>0.8</beamStartOffset>
        <beamLineFleckChanceCurve>
          <points>
            <li>(0, 0)</li>
            <li>(0.65, 0.4)</li>
            <li>(1, 0.75)</li>
          </points>
        </beamLineFleckChanceCurve>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>1.3</cooldownTime>
      </li>
    </tools>
    <weaponClasses>
      <li>RangedHeavy</li>
    </weaponClasses>
    <weaponTags>
	<li>GrineerLight</li>
      <li>LongShots</li>
	  <li>SpacerGun</li>
    </weaponTags>
</ThingDef>

